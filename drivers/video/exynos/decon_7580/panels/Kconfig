	depends on EXYNOS_DECON_LCD && EXYNOS_MIPI_DSI
	tristate "S6E3FA3 AMOLED FHD LCD driver(1080 x 1920)"

config PANEL_S6D7AA0_DYNAMIC
	depends on EXYNOS_DECON_LCD && EXYNOS_MIPI_DSI
	tristate "S6d7AA0 TFT XGA LCD driver(1024 x 768)"

config PANEL_S6D7AA0X62_DYNAMIC
	depends on EXYNOS_DECON_LCD && EXYNOS_MIPI_DSI
	tristate "S6d7AA0 TFT XGA LCD driver(720 x 1280)"

